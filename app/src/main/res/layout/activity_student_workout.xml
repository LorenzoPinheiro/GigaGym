<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".workout.student.StudentWorkoutActivity">

    <!-- header -->
    <ImageView
        android:id="@+id/imageWolf11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_wolf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:contentDescription=" " />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="374dp"
        android:layout_height="48dp"
        android:layout_marginTop="104dp"
        android:background="#FEF7FF"
        android:padding="14dp"
        android:text="Treino Brutal"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="375dp"
        android:layout_height="3dp"
        android:layout_marginBottom="560dp"
        android:background="#65558F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="403dp"
        android:layout_height="458dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_marginBottom="48dp"
                android:width="360dp"
                android:height="80dp"
                android:backgroundTint="#FEF7FF"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:text="Exercicio 1"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:cornerRadius="12dp"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:width="360dp"
                android:height="80dp"
                android:backgroundTint="#FEF7FF"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:text="Exercicio 2"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:cornerRadius="12dp"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:width="360dp"
                android:height="80dp"
                android:backgroundTint="#FEF7FF"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:text="Exercicio 3"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:cornerRadius="12dp"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:width="360dp"
                android:height="80dp"
                android:backgroundTint="#FEF7FF"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:text="Exercicio 4"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:cornerRadius="12dp"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:width="360dp"
                android:height="80dp"
                android:backgroundTint="#FEF7FF"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:text="Exercicio 5"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:cornerRadius="12dp"
                app:iconPadding="8dp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:width="360dp"
                android:height="80dp"
                android:backgroundTint="#FEF7FF"
                android:paddingStart="48dp"
                android:paddingEnd="48dp"
                android:text="Exercicio 6"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                app:cornerRadius="12dp"
                app:iconPadding="8dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:width="343dp"
        android:height="42dp"
        android:backgroundTint="#E8DEF8"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:text="Finalizar treino"
        android:textAlignment="center"
        android:textColor="#000000"
        app:cornerRadius="12dp"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/src_nav_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>